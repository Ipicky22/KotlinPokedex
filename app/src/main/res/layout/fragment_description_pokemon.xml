<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

    <LinearLayout
        android:id="@+id/parentView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/pokemon_sprite_default"
        android:layout_width="150dp"
        android:layout_height="150dp"
    />

    <ImageView
        android:id="@+id/pokemon_sprite_shiny"
        android:layout_width="150dp"
        android:layout_height="150dp"
    />
    </LinearLayout>

        <TextView
            android:id="@+id/pokemon_detail_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/typeView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:id="@+id/firstColumnTypeView"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/pokemon_type_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondColumnTypeView"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/pokemon_type_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableauView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:id="@+id/tableauColorView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@drawable/shape"
>

        <LinearLayout
            android:id="@+id/firstColumnView"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/hpColumnView"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/pokemon_stat_hp_title"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="HP"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pokemon_stat_hp"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attackColumnView"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/pokemon_stat_attack_title"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="ATK"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pokemon_stat_attack"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/defenseColumnView"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/pokemon_stat_defense_title"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="DEF"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/pokemon_stat_defense"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondColumnView"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/atkspeColumnView"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/pokemon_stat_special_attack_title"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="ATK.Spe"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pokemon_stat_special_attack"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/defspeColumnView"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/pokemon_stat_special_defense_title"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="DEF.Spe"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pokemon_stat_special_defense"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/speedColumnView"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/pokemon_stat_speed_title"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="VIT"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pokemon_stat_speed"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/pokemon_detail_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:id="@+id/pokemon_detail_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="695dp"
        android:layout_marginBottom="3dp" />

</LinearLayout>
